ALGORITHM CheckpointALgo

VAR

var str = String;
var n=length(str); 
nbStr=0;
nbMot=0;
nbVoy=0;
tabV=["a","e","i","o","u","y"]

BEGIN

FOR i FROM 1 TO n DO
nbStr++

IF(str[i]==tabV) THEN
nbVoy++;
WRITE("le nombre de voyelle dans la chaine est:" nbVoy)
END IF
IF str[i] == " " THEN
nbMot = nbMot + 1; 
nbStr--;
WRITE("le nombre de caractere de la chaine est:" nbStr)
WRITE("le nombre de mots dans la chaine est:" nbMot)
END IF
END FOR

END;

